{% set urlAd = path('ad_one', {'slug':ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center"> 
            {{ad.rooms}} chambres <strong> {{ad.price}}&euro; par nuit</strong> <br>
            {% if ad.comments|length >0 %}
                {% include "ratingStar.html.twig" with {"rating" : ad.avgRating} %}
            {% else %}
                <small >(pas encore not√©)</small>
            {% endif %}
        </div>
        <div class="card-body">
            <h4 class="card-title">{{ad.title}}</h4>
            <a href="{{urlAd }}">
                <img src="{{ad.coverImage}}" alt="" style="width: 100%;">
            </a>
            <p class="card-text">{{ad.introduction|raw}}</p>
            <a href="{{urlAd}}" class="btn btn-primary mb-auto">Voir l'annonce</a>
            {% if app.user and app.user == ad.user %}
                <a class="btn btn-warning" href="{{ path('ad_edit', {'slug' : ad.slug }) }}"> Modifier l'annonce </a>
            {% endif %}
        </div>
    </div>
</div>  