{% extends "admin/base.html.twig" %}

{% block title %} Dashboard Admin {% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row my-5">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h1 class="text-center"> <strong> Dashboard </strong></h1>
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="row">
            <div class="col-md-3 ">
              
                <div class="card bg-primary arrondi text-white py-3 px-3 tailleCard justify-content-center">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-md-6">
                            <h4>{{data.users}} Utilisateurs</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <a href="{{path('admin_ads')}}">
                    <div class="card bg-success arrondi text-white py-3 px-3 tailleCard justify-content-center">
                        <div class="row">
                            <div class="col-md-6">
                                <i class="fas fa-address-card fa-3x"></i>
                            </div>
                            <div class="col-md-6">
                                <h4>{{data.ads}} annonces</h4>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning arrondi text-white py-3 px-3 tailleCard justify-content-center">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="fas fa-folder-open fa-3x"></i>
                        </div>
                        <div class="col-md-6">
                            <h4>{{data.bookings}} Réservations</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info arrondi text-white py-3 px-3 tailleCard justify-content-center">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="fas fa-comments fa-3x"></i>
                        </div>
                        <div class="col-md-6">
                            <h4>{{data.comments}} Commentaires</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-md-6">
                <div class="card bg-success text-white justify-content-center arrondi">
                    <div class="card-header">
                        <h4 class="card-title text-center">
                            Nos Meilleur Annonces
                        </h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover text-white">
                            <thead>
                                <tr>
                                    <th>Annonce</th>
                                    <th>Propiétaire</th>
                                    <th>Moyenne</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ad in bastAds %}
                                    <tr>
                                        <td><a  target="_blank" class="dashboard" href="{{path('ad_one', {'slug':ad.slug})}}"> {{ad.title}} </a></td>
                                        <td>
                                            <img src="{{ad.picture}}" alt="" class="avatar-min">
                                            <span>{{ad.lastName}}  {{ad.firstName}}</span>
                                        </td>
                                        <td>{{ad.rating}}</td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="card bg-danger text-white justify-content-center arrondi">
                    <div class="card-header">
                        <h4 class="card-title text-center">
                            Nos Pires Annonces
                        </h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover text-white">
                            <thead>
                                <tr>
                                    <th>Annonce</th>
                                    <th>Propiétaire</th>
                                    <th>Moyenne</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ad in lessAds %}
                                    <tr>
                                        <td> <a target="_blank" class="dashboard" href="{{path('ad_one', {'slug':ad.slug})}}"> {{ad.title}} </a></td>
                                        <td>
                                            <img src="{{ad.picture}}" alt="" class="avatar-min">
                                            <span>{{ad.lastName}}  {{ad.firstName}}</span>
                                        </td>
                                        <td>{{ad.rating}}</td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            
        </div>

    </div>

{% endblock %}