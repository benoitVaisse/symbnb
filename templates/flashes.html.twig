{% for label, messages in app.flashes %}

<div class="container">
    {% for message in messages %}

    <div class="alert alert-dismissible alert-{{label}}">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p class="mb-0">{{message|raw}}.</p>
      </div>

    {% endfor %}
</div>

{% endfor %}